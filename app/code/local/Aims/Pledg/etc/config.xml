<config>
    <modules>
        <Aims_Pledg>
            <version>0.0.1</version>
        </Aims_Pledg>
    </modules>
    <global>
        <blocks>
            <aims_pledg>
                <class>Aims_Pledg_Block</class>
            </aims_pledg>
        </blocks>
        <helpers>
            <aims_pledg>
                <class>Aims_Pledg_Helper</class>
            </aims_pledg>
        </helpers>
        <models>
            <aims_pledg>
                <class>Aims_Pledg_Model</class>
            </aims_pledg>
        </models>
    </global>
    <frontend>
        <routers>
            <aims_pledg>
                <use>standard</use>
                <args>
                    <module>Aims_Pledg</module>
                    <frontName>pledg</frontName>
                </args>
            </aims_pledg>
        </routers>
        <layout>
            <updates>
                <aims_pledg>
                    <file>aims_pledg.xml</file>
                </aims_pledg>
            </updates>
        </layout>
        <translate>
            <modules>
                <Aims_Pledg>
                    <files>
                        <default>Aims_Pledg.csv</default>
                    </files>
                </Aims_Pledg>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <events>
            <controller_action_predispatch_adminhtml_system_config_save>
                <observers>
                    <aims_pledg_saveadmin>
                        <type>singleton</type>
                        <class>Aims_Pledg_Model_Observer</class>
                        <method>saveConfigPledg</method>
                    </aims_pledg_saveadmin>
                </observers>
            </controller_action_predispatch_adminhtml_system_config_save>
        </events>
    </adminhtml>
